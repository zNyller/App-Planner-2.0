<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegacao"
    app:startDestination="@id/menuHome">

    <fragment
        android:id="@+id/menuHome"
        android:name="com.nyller.android.mach4.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/fromHomeFragmentToPreferencesFragment"
            app:destination="@id/menuConfig" />
    </fragment>

    <fragment
        android:id="@+id/menuConfig"
        android:name="com.nyller.android.mach4.fragments.PreferencesFragment"
        android:label="PreferencesFragment">
        <action
            android:id="@+id/fromPreferencesFragmentToHomeFragment"
            app:destination="@id/menuHome"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.nyller.android.mach4.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

</navigation>